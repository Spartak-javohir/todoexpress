
    <%- include('parts/header') %>
    <section class="pt-4 ">
        <div class="container">
            <div class="card p-2 mx-auto" style="width: 38rem;">
                <%var name%>
                <ul class="list-group list-group-flush">
                  <li class=" my-1 text-center list-group-item">To Do List</li>
                  <li class=" my-1 text-center list-group-item">
                    <h1>
                      <%=name%>
                    </h1>
                  </li>
                  <form class="d-flex flex-column" method="POST" action="">
                    <input class="my-1 input outline-danger" name="todotext" required placeholder="To Do text" type="text">
                    <button class="btn my-1 btn-success" type="submit"> ADD </button>
                  </form>
                </ul>
            </div>
        </div>
    </section>
    <section class="mt-3">
      <div class="container ">
        <%var todotexts;%>
        <div class="border rounded border-warning d-flex row justify-content-between p-2 mx-auto" style="width: 38rem;">
          <%for (let i of todotexts) {%>
            
          <p class="text my-2 col-4"><%=i.todotext%></p>
          <time class="text-info my-2 col-4"><%=i.time%></time>
          <button class="btn col-2 ok my-2  btn-success">ok</button>
          <button id=`${todotexts.length+1}` class="btn my-2 delete btn-danger col-2">delete</button>
          
        
          
          <%}%>
        </section>
        <script>
          const deleteBtnElem = document.querySelector(".delete")
          const okBtnElem = document.querySelector(".ok")
          deleteBtnElem.addEventListener("click", (e)=>{
            console.log(e.index);
          })
        </script>
      </div>
      </div>
    
