				<!-- Login Form -->
				<div class="styled-form">
					<form method="POST">
						
						<div class="row clearfix">
							
							<!-- Form Group -->
							<div class="form-group col-lg-6 col-md-12 col-sm-12">
								<label>First Name</label>
								<input type="text" name="name" value="" placeholder="First Name" required>
							</div>
							
